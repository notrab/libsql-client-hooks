{
  "name": "libsql-client-hooks",
  "description": "Before and after execute hooks for libSQL.",
  "version": "0.0.0-development",
  "license": "MIT",
  "repository": "notrab/libsql-client-hooks",
  "keywords": [
    "turso",
    "tursodatabase",
    "sqlite",
    "libsql",
    "hooks"
  ],
  "contributors": [
    "Jamie Barton <jamie@notrab.dev>"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --clean=false",
    "test": "vitest",
    "test:watch": "vitest watch",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@libsql/core": "0.7.0",
    "@types/node": "^20.14.10",
    "semantic-release": "24.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vitest": "^2.0.1"
  },
  "peerDependencies": {
    "@libsql/client": "^0.7.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": [
      "esm",
      "cjs"
    ],
    "skipNodeModulesBundle": true,
    "externals": [
      "node_modules"
    ]
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "node": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "require": {
        "node": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
